<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/bali" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/twoHundred_dp"
        android:fontFamily="casual"
        android:text="Bali Creations"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:textSize="@dimen/forty_sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/oneHundredEighty_dp"
        android:layout_marginLeft="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:textSize="@dimen/fifteen_sp"
        android:fontFamily="casual"
        android:text="Address: 2436 Crescent Blvd Sunnydale, CA 90052"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/oneHundredFifty_dp"
        android:layout_marginLeft="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/fifteen_sp"
        android:fontFamily="casual"
        android:text="Hours:Opens 9am- 10pm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/oneHundredTwenty_dp"
        android:layout_marginLeft="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:textSize="@dimen/fifteen_sp"
        android:fontFamily="casual"
        android:text="Phone: (205)-444-8764"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/fifteen_sp"
        android:layout_marginBottom="@dimen/ninety_dp"
        android:layout_marginLeft="@dimen/twelve_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="casual"
        android:text="Website: www.balicreations.com" />


</RelativeLayout>